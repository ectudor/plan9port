#!/usr/local/plan9/bin/rc

PLAN9=/usr/local/plan9
SHELL=$PLAN9/bin/rc
acmeshell=$PLAN9/bin/rc
tabstop=4
TERM=dumb
PAGER=cat
BROWSER=xdg-open
font=/mnt/font/GoMono/11a/font

opath=$path i=() {
	path=()
	for (i in $opath) {
		if (! ~ $i $PLAN9/bin) {
			path=($path $i)
		}
	}
	path=($PLAN9/usrbin $path $PLAN9/bin)
}

if (! pid=`{pgrep -x plumber} ~ $#pid 1) {
	$PLAN9/bin/plumber
	cat $PLAN9/plumbing | $PLAN9/bin/9 9p write plumb/rule
}

$PLAN9/bin/acme -c 2 -abf $font $* &

